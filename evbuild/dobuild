if [ $# -ne 1 ]
then
    echo "usage: $0 local|dev|cert|prod"
    exit 1
fi

    case "$1" in
        local)
            echo "-- local build:"
            cp build-env.properties.local build-env.properties
            ant -f build-targetsubstitute.xml
        ;;
        dev)
            echo "-- development build:"
            cp build-env.properties.dev build-env.properties
            ant
            mv $CATALINA_HOME/webapps/*.war $CATALINA_HOME/staging/dev
        ;;
        cert)
            echo "-- certification build:"
            cp build-env.properties.cert build-env.properties
            ant
            mv $CATALINA_HOME/webapps/*.war $CATALINA_HOME/staging/cert
        ;;
        prod)
            echo "-- production build:"
            cp build-env.properties.prod build-env.properties
            ant
            mv $CATALINA_HOME/webapps/*.war $CATALINA_HOME/staging/prod
        ;;
        *)
            echo "usage: $0 local|dev|cert|prod"
            exit 1
        ;;
    esac
