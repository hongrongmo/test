<Context>

    <Resource name="jdbc/village_log" auth="Container"
              type="javax.sql.DataSource" driverClassName="oracle.jdbc.driver.OracleDriver" 
              username="@log-jdbc.username@" password="@log-jdbc.password@" url="@log-jdbc.url@" 
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              defaultAutoCommit="false" 
              initialSize="@log-jdbc.initialsize@" maxActive="@log-jdbc.maxactive@" maxIdle="@log-jdbc.maxidle@" minIdle="@log-jdbc.minidle@"
              suspectTimeout="30" timeBetweenEvictionRunsMilllis="5000" minEvictableIdleTimeMillis="10000"
              removeAbandonedTimeout="30" removeAbandoned="true" logAbandoned="true"/>

</Context>


