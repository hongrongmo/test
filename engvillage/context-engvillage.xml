<Context>

    <Resource name="jdbc/search" 
              type="javax.sql.DataSource" driverClassName="oracle.jdbc.driver.OracleDriver" 
              username="@search-jdbc.username@" password="@search-jdbc.password@" url="@search-jdbc.url@" 
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              auth="Container" 
              defaultAutoCommit="false" 
              initialSize="@search-jdbc.initialsize@" maxActive="@search-jdbc.maxactive@" maxIdle="@search-jdbc.maxidle@" minIdle="@search-jdbc.minidle@"
              suspectTimeout="30" timeBetweenEvictionRunsMilllis="5000" minEvictableIdleTimeMillis="10000"
              removeAbandonedTimeout="10" removeAbandoned="true" logAbandoned="true"/>

    <Resource name="jdbc/session" 
              type="javax.sql.DataSource" driverClassName="oracle.jdbc.driver.OracleDriver" 
              username="@session-jdbc.username@" password="@session-jdbc.password@" url="@session-jdbc.url@" 
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              auth="Container" 
              defaultAutoCommit="false" 
              initialSize="@session-jdbc.initialsize@" maxActive="@session-jdbc.maxactive@" maxIdle="@session-jdbc.maxidle@" minIdle="@session-jdbc.minidle@"
              suspectTimeout="30" timeBetweenEvictionRunsMilllis="5000" minEvictableIdleTimeMillis="10000"
              removeAbandonedTimeout="10" removeAbandoned="true" logAbandoned="true"/>
</Context>
