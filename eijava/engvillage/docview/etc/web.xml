  <filter>
    <filter-name>FastDocViewFilter</filter-name>
    <filter-class>org.ei.books.FastDocViewFilter</filter-class>
    <init-param>
      <param-name>logURL</param-name>
      <param-value>http://@log_server@/logservice/servlet/LogServer</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>FastDocViewFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>docview</servlet-name>
    <servlet-class>
        no.fast.foundation.extras.webapphelper.security.SecureDispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>docview</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

