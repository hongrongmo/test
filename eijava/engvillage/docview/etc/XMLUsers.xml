<?xml version="1.0" encoding="ISO-8859-1"?>

<security>
    <users>
        <user name="anonymous" password="" membership="AllUsers" />
    </users>
 

    <groups>
        <group id="AllUsers" short_description="AllUsers" long_description="All Users">
            <grant_access grantid="Everyone"/>
        </group>
    </groups>
 

    <grants>
        <grant id="Everyone" short_description="Everyone" long_description="Base permissions">
            <permission type="AuthPermission" name="getSubject" action="" />

            <!-- Grant rights to read class and resource files -->
            <permission type="FilePermission" name="${catalina.home}${/}webapps${/}docren${/}-" action="read" />
            <permission type="FilePermission" name="${catalina.home}${/}work${/}Catalina${/}localhost${/}docren${/}-" action="read" />
            <!-- <permission type="FilePermission" name="${catalina.home}\server\lib\-" action="read" /> -->

            <!--  Required for Velocity -->
            <permission type="PropertyPermission" name="file.separator" action="read" />
            <permission type="RuntimePermission" name="accessClassInPackage.org.apache.coyote.tomcat5" action="" />

            <!-- Required for org.springframework.web.servlet.view.AbstractTemplateView -->
            <permission type="RuntimePermission" name="accessClassInPackage.org.apache.catalina.*" action="" />
            <permission type="RuntimePermission" name="defineClassInPackage.org.apache.catalina.*" action="" />
            <permission type="java.lang.reflect.ReflectPermission" name="suppressAccessChecks" action="" />
        </grant>
    </grants>
</security>

