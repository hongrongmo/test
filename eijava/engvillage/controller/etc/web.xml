<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

    <!-- General description of your web application -->

    <display-name>The Engineering Village Controller</display-name>
    <description>This is version XXX of EV2</description>

    <servlet>
      <servlet-name>Controller</servlet-name>
      <description>The Controller servlet</description>
      <servlet-class>org.ei.controller.Controller</servlet-class>
      <init-param>
        <param-name>lindahallURL</param-name>
        <param-value>http://@session_server@/sessionservice/servlet/LindaHallService</param-value>
      </init-param>
      <init-param>
        <param-name>contentConfig</param-name>
        <param-value>http://@data_server@/engvillage/servlet/ConfigService?configName=ContentConfig.xml</param-value>
      </init-param>
      <init-param>
        <param-name>appName</param-name>
        <param-value>EngVillage2</param-value>
      </init-param>
      <init-param>
        <param-name>appendSession</param-name>
        <param-value>true</param-value>
      </init-param>
      <init-param>
        <param-name>logURL</param-name>
        <param-value>http://@log_server@/logservice/servlet/LogServer</param-value>
      </init-param>
      <init-param>
        <param-name>authURL</param-name>
        <param-value>http://@session_server@/sessionservice/servlet/SessionService</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
    	<servlet-name>HeartbeatService</servlet-name>
      <description>The Heartbeat Service </description>
      <servlet-class>org.ei.system.HeartbeatService</servlet-class>
      <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>HealthCheck</servlet-name>
    	<description>Health Check Service</description>
    	<servlet-class>org.ei.system.HealthCheck</servlet-class>
    	<load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
    	<servlet-name>RedirectService</servlet-name>
    	<description>The Redirect Service</description>
    	<servlet-class>org.ei.system.RedirectService</servlet-class>
    	<init-param>
    	  <param-name>appName</param-name>
    	  <param-value>RedirectService</param-value>
    	</init-param>
    	<init-param>
      <param-name>logURL</param-name>
      <param-value>http://@log_server@/logservice/servlet/LogServer</param-value>
    	</init-param>
    	<load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>BarChart</servlet-name>
      <description>This jFreeChart servlet handles chart drawings and returns chart</description>
      <servlet-class>org.ei.controller.BarChart</servlet-class>
    	<init-param>
    	  <param-name>BarChartBkgndImageFile</param-name>
    	  <param-value>/WEB-INF/ei_logo.png</param-value>
    	</init-param>
    	<load-on-startup>5</load-on-startup>
    </servlet>
    <servlet>
	  <servlet-name>PatentPDF</servlet-name>
	  <description>This PatentPDF servlet  get PDFs from Univentio Gateway</description>
	  <servlet-class>org.ei.fulldoc.PatentPDF</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>OpenURL</servlet-name>
      <description>This is servlet handles Open URL Requests</description>
      <servlet-class>org.ei.controller.OpenURL</servlet-class>
      <load-on-startup>6</load-on-startup>
    </servlet>

    <servlet>
      <servlet-name>AthensService</servlet-name>
      <description>This is servlet handles Athens Authentication</description>
      <servlet-class>org.ei.athens.AthensService</servlet-class>
      <init-param>
        <param-name>dspid</param-name>
        <param-value>ELS_EV</param-value>
      </init-param>
      <init-param>
        <param-name>resource</param-name>
        <param-value>ELS_EV2</param-value>
      </init-param>
      <init-param>
        <param-name>athensBaseURL</param-name>
        <param-value>http://auth.athensams.net</param-value>
      </init-param>
      <load-on-startup>7</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>Controller</servlet-name>
      <url-pattern>/servlet/Controller</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>HeartbeatService</servlet-name>
        <url-pattern>/servlet/HeartbeatService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>HealthCheck</servlet-name>
      <url-pattern>/servlet/HealthCheck</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>RedirectService</servlet-name>
      <url-pattern>/servlet/RedirectService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>OpenURL</servlet-name>
      <url-pattern>/servlet/OpenURL</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>AthensService</servlet-name>
      <url-pattern>/servlet/AthensService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>BarChart</servlet-name>
      <url-pattern>/servlet/BarChart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
          <servlet-name>PatentPDF</servlet-name>
          <url-pattern>/servlet/Patent.pdf</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>0</session-timeout><!-- 30 minutes -->
    </session-config>
</web-app>
