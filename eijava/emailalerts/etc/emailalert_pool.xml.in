<POOLS>
<CONNECTION NAME="search"
	    URL="@search-jdbc.url@"
	    USERNAME="@search-jdbc.username@"
	    PASSWORD="@search-jdbc.password@"
	    DRIVER="@search-jdbc.driver@"
	    MINCONNECTIONS="@search-jdbc.minconnections@"
	    MAXCONNECTIONS="@search-jdbc.maxconnections@"
	    REFRESHINTERVAL="1.0"
	    LOGFILE="@logs-dir@search_email_pool.log"/>

<CONNECTION NAME="session"
	    URL="@session-jdbc.url@"
	    USERNAME="@session-jdbc.username@"
	    PASSWORD="@session-jdbc.password@"
	    DRIVER="@session-jdbc.driver@"
	    MINCONNECTIONS="@session-jdbc.minconnections@"
	    MAXCONNECTIONS="@session-jdbc.maxconnections@"
	    REFRESHINTERVAL="1.0"
	    LOGFILE="@logs-dir@session_email_pool.log"/>

</POOLS>


