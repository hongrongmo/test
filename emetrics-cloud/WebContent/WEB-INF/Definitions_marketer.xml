<?xml version="1.0" encoding="ISO-8859-1"?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config.dtd">


<tiles-definitions>

  <!-- Main Layout Definition description  -->
  <definition name="mainLayout" path="/layout/mainLayout.jsp">
      <put name="title"  value="Ei Usage Reporting System - Main" />
      <put name="header" value="topmenu.main" />
      <put name="body"   value="/marketer/bodyWelcome.jsp" />
      <put name="footer" value="/common/footer.jsp" />
  </definition>

  <!-- Report Layout Definition description  -->
  <definition name="printLayout" path="/layout/printLayout.jsp" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - Reports (Printer Friendly)" />
      <put name="body"   value="/marketer/bodyReports.jsp" />
  </definition>

  <!-- Report Layout Definition description  -->
  <definition name="reportLayout" path="/layout/reportLayout.jsp" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - Reports" />
      <put name="header" value="topmenu.report" />
      <put name="menu"   value="/common/menu.jsp" />
      <put name="body"   value="/marketer/bodyReports.jsp" />
  </definition>

  <!-- Description Layout Definition description  -->
  <definition name="descriptionLayout" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - Descriptions" />
      <put name="header" value="topmenu.description" />
      <put name="body"   value="/common/bodyDescription.jsp" />
  </definition>

  <!-- Support Layout Definition description  -->
  <definition name="supportLayout" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - Support" />
      <put name="header" value="topmenu.support" />
      <put name="body"   value="/marketer/bodySupport.jsp" />
  </definition>

  <!-- Switch customer Layout Definition description  -->
  <definition name="customersLayout" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - Customer Selector" />
      <put name="header" value="topmenu.customers" />
      <put name="body"   value="/marketer/bodyCustomers.jsp" />
  </definition>

  <!-- Description Layout Definition description  -->
  <definition name="errorLayout" extends="mainLayout">
      <put name="title"  value="Ei Usage Reporting System - System Error" />
      <put name="body"   value="/common/bodyError.jsp" />
  </definition>

  <!-- DefaultMenuLayout definition description  -->
  <definition name="DefaultMenuLayout" path="/common/header.jsp">
      <put name="menu_main"         value="main_blue.gif" />
      <put name="menu_report"       value="reports_blue.gif" />
      <put name="menu_customers"    value="customers_blue.gif" />
      <put name="menu_description"  value="description_blue.gif" />
      <put name="menu_support"      value="support_blue.gif" />
  </definition>

  <!-- Main view Extended DefaultMenuLayout definition -->
  <definition name="topmenu.report" extends="DefaultMenuLayout" >
      <put name="menu_report"       value="reports_grey.gif" />
  </definition>

   <!-- Description view Extended DefaultMenuLayout definition -->
  <definition name="topmenu.description" extends="DefaultMenuLayout" >
      <put name="menu_description"       value="description_grey.gif" />
  </definition>

  <!-- Support view Extended DefaultMenuLayout definition -->
  <definition name="topmenu.support" extends="DefaultMenuLayout" >
      <put name="menu_support"       value="support_grey.gif" />
  </definition>

  <!-- Reports view Extended DefaultMenuLayout definition -->
  <definition name="topmenu.main" extends="DefaultMenuLayout" >
    <put name="menu_main"       value="main_grey.gif" />
  </definition>

  <!-- Support view Extended DefaultMenuLayout definition -->
  <definition name="topmenu.customers" extends="DefaultMenuLayout" >
      <put name="menu_customers"       value="customers_grey.gif" />
  </definition>

</tiles-definitions>
