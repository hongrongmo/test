      <form name="itemForm">
        <field property="note.note" depends="required">
          <arg0   key="prompt.notes"/>
        </field>
      </form>

      <form name="contractForm">
        <field property="contract.contractType" depends="required">
          <arg0   key="prompt.contractType"/>
        </field>

        <field property="contract.accessType" depends="required">
          <arg0   key="prompt.accessType"/>
        </field>
      </form>


      <form name="ddsForm">
        <field property="options.firstName" depends="required">
          <arg0   key="prompt.firstName"/>
        </field>

        <field property="options.lastName" depends="required">
          <arg0   key="prompt.lastName"/>
        </field>

        <field property="options.shipping" depends="required">
          <arg0   key="prompt.shipping"/>
        </field>

        <field property="options.email" depends="required,email">
          <arg0   key="prompt.email"/>
        </field>
      </form>

      <form name="contactForm">
        <field property="contact.firstName" depends="required">
          <arg0   key="prompt.firstName"/>
        </field>

        <field property="contact.lastName" depends="required">
          <arg0   key="prompt.lastName"/>
        </field>

        <field property="contact.email" depends="required,email">
          <arg0   key="prompt.email"/>
        </field>
      </form>

      <form name="userForm">
	      <field property="user.email" depends="required,email">
	        <arg0   key="prompt.email"/>
	      </field>

	      <field property="user.name" depends="required">
	        <arg0   key="prompt.name"/>
	      </field>

	      <field property="user.roles" depends="required">
					<arg0   key="prompt.roles"/>
	      </field>

	      <field property="user.username" depends="required,minlength,maxlength">
	        <arg0   key="prompt.username"/>
	        <arg1   key="${var:minlength}" name="minlength" resource="false"/>
	        <arg2   key="${var:maxlength}" name="maxlength" resource="false"/>
	        <var>
	          <var-name>maxlength</var-name>
	          <var-value>20</var-value>
	        </var>
	        <var>
	          <var-name>minlength</var-name>
	          <var-value>3</var-value>
	        </var>
	      </field>

	      <field property="user.password" depends="required,minlength,maxlength">
	        <arg0   key="prompt.password"/>
	        <arg1   key="${var:minlength}" name="minlength" resource="false"/>
	        <arg2   key="${var:maxlength}" name="maxlength" resource="false"/>
	        <var>
	          <var-name>maxlength</var-name>
	          <var-value>16</var-value>
	        </var>
	        <var>
	          <var-name>minlength</var-name>
	          <var-value>3</var-value>
	        </var>
	      </field>
	    </form>

      <form name="loginForm">
				<field property="username" depends="required">
				  <arg0   key="prompt.username"/>
				</field>

				<field property="password" depends="required" >
				  <arg0   key="prompt.password"/>
				</field>
			</form>

    </formset>


</form-validation>
